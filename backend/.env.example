# Configuración de Forza Ecommerce Engine API
# Estas variables deben configurarse según la documentación oficial de Forza

# URL base del API de Forza
FORZA_API_URL=https://api.forza.com/v1

# API Key proporcionada por Forza
FORZA_API_KEY=your_forza_api_key_here

# Client ID proporcionado por Forza  
FORZA_CLIENT_ID=your_forza_client_id_here

# Habilitar/deshabilitar integración con Forza
FORZA_ENABLED=false

# Puerto del servidor
PORT=3005

# Configuración de MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=enviosdb
DB_PORT=3306

# Google Maps API (para calcular distancias)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Configuración adicional
NODE_ENV=development